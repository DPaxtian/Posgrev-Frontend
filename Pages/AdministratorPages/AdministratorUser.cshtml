@page
@model Posgrev_Frontend.Pages.AdministratorPages.AdministratorUserModel
@{
    ViewData["Title"] = "Posgrev - Administrar Usuarios";
}

<style>
    .card {
        cursor: pointer;
        border-radius: 10px;
    }

    .card-body {
        border-color: grey;
    }

    .navbar {
        background-color: #18529D;
    }

    .nav-link {
        color: white;
    }
</style>


<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/AdministratorPages/AdministratorUser">Usuarios</a>
                </li>
                <li class="nav-item">
                </li>
            </ul>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Buscar usuario" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Buscar</button>
            </form>
        </div>
    </div>
</nav>

<button type="button" class="btn btn-primary mt-3 ms-3" onclick="navigateToCreateNewUser()">
    Nuevo usuario
</button>

<div class="container-fluid mt-3" id="programCard">
    @foreach (var user in Model.RegisteredUsers)
    {
        <div class="card mt-2 mb-2">
            <div class="card-body">
                <div class="d-flex">
                    <h5 class="card-title col-11">
                        ID: @(user.IDusuario ?? -1)
                    </h5>
                    <button type="button" class="btn btn-outline-primary">Editar</button>
                </div>
                <div class="d-flex">
                    <span class="me-4">Nombre usuario: @(user.nombreUsuario ?? "No disponible")</span>
                    <span class="me-4">Rol: @(user.rol ?? "No disponible")</span>
                </div>
                <div class="d-flex">
                </div>
            </div>
        </div>
    }
</div>



<script>
    const navigateToCreateNewUser = () => {
        var url = "/AdministratorPages/UserGestion";
        window.location.href = url;
    }
</script>